<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ok.lab.magiclantern">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ok.lab.magiclantern.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ok.lab.magiclantern.activities.PopularMoviesSettingsActivity"
            android:label="@string/title_popular_movies_settings_activity"
            android:parentActivityName="com.ok.lab.magiclantern.activities.PopularMoviesUniversalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ok.lab.magiclantern.activities.PopularMoviesUniversalActivity" />
        </activity>

        <provider
            android:name="com.ok.lab.magiclantern.data.FavoriteMovieCollectionProvider"
            android:authorities="com.ok.lab.magiclantern.provider"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.ok.lab.magiclantern.activities.PopularMoviesUniversalActivity"
            android:label="@string/title_activity_popular_movies_universal"
            android:parentActivityName="com.ok.lab.magiclantern.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ok.lab.magiclantern.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.ok.lab.magiclantern.activities.DetailsViewUniversalActivity"
            android:label="@string/title_activity_details_view_universal"
            android:parentActivityName="com.ok.lab.magiclantern.activities.PopularMoviesUniversalActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ok.lab.magiclantern.activities.PopularMoviesUniversalActivity" />
        </activity>
        <activity
            android:name="com.ok.lab.magiclantern.activities.UpcomingMoviesViewActivity"
            android:label="@string/title_activity_now_playing_view"
            android:parentActivityName="com.ok.lab.magiclantern.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ok.lab.magiclantern.activities.MainActivity" />
        </activity>
    </application>

</manifest>
