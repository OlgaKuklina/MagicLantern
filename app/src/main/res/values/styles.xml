<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/textcolorSec</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorSecondary">@color/main_view_background_color</item>
        <item name="android:textColorPrimary">@color/nav_drawer_item_color</item>
        <item name="android:colorBackground">@color/background_color</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="Widget.Design.CoordinatorLayout" parent="android:Widget">
        <item name="statusBarBackground">@drawable/mpbg</item>
        <!--<item name="statusBarBackground">@color/colorPrimary</item>-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DetailViewTitle">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/textdetcolortitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="DetailViewSubTitle">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/textdetcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>

    </style>

    <style name="DetailViewSeparator">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/textcolorPrimary</item>
    </style>

    <style name="DetailViewText">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
